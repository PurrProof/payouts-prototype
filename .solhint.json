{
  "extends": "solhint:all",
  "plugins": ["prettier"],
  "rules": {
    "code-complexity": ["error", 8],
    "compiler-version": ["error", ">=0.8.26"],
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ],
    "max-line-length": ["error", 120],
    "named-parameters-mapping": "warn",
    "imports-order": "off",
    "foundry-test-functions": "off",
    "no-console": "warn",
    "not-rely-on-time": "warn",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  }
}
